<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor"
            tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CommonDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="CommonDialog2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CACACA</item>
        <item name="colorControlActivated">#FF9800</item>
    </style>
    <style name="AppTheme.NoActionBar1">
        <item name="android:statusBarColor"
            tools:targetApi="lollipop">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
  >
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item> //  add it here
    </style>

    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="homeCardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="viewParent.headerText.HomeCardTitle">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <color name="contentTextColor">#FFFFFF</color>
    <color name="whiteTextColor">#FFFFFF</color>
    <color name="colorYellowA700">#FBC02D</color>
    <color name="colorGreen">#4CAF50</color>
    <dimen name="headerTextSize">@dimen/_14ssp</dimen>

    <style name="dialogButtonNo" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ColorPrimaryOverlayRed">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>
    <style name="ButtonStyleRed" >
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="materialThemeOverlay">@style/ColorPrimaryOverlayRed</item>
    </style>
    <style name="ColorPrimaryOverlayGreen">
        <item name="colorPrimary">@color/colorGreen</item>
    </style>
    <style name="ButtonStyleGreen" >
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/colorGreen</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="materialThemeOverlay">@style/ColorPrimaryOverlayGreen</item>
    </style>
</resources>