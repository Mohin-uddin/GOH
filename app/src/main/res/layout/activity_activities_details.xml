<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="fitXY"
            android:src="@drawable/activities_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDetailsBackArrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_arrow_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_upload_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivDetailsBackArrow" />

        <View
            android:id="@+id/vLineV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintBottom_toBottomOf="@id/appCompatImageView"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInformationActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/vLineV"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/curved_shape_activities_details_white">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvActivitiesName"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:text="Live music concert in Dhaka 2022"
                app:fontFamily="@font/axiforma_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llSponsor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                app:layout_constraintEnd_toStartOf="@+id/llSponsorMarker"
                app:layout_constraintTop_toBottomOf="@+id/tvActivitiesName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/llSponsorMarker">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host by - "
                    android:textColor="#8C8C8C"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/axiforma_regular"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSponsorPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sajol_ahmed"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/axiforma_regular"
                    android:textColor="@color/black"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llSponsorMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivitiesName"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:background="@drawable/item_spounsored">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/premimum"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sponsored"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:fontFamily="@font/axiforma_medium"
                    android:textColor="#F8BB46"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                app:fontFamily="@font/axiforma_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llSponsorMarker"
                android:layout_marginTop="@dimen/_15sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAboutDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAbout"
                app:fontFamily="@font/axiforma_medium"
                android:textSize="@dimen/_10ssp"
                android:text="about"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="#253E2F"/>
            <View
                android:id="@+id/vAboutBottomLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAboutDetails"
                android:background="#F2F2F2"
                android:layout_marginTop="@dimen/_18sdp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/vAboutBottomLine"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_18sdp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        app:cardBackgroundColor="#FFF6E9"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="0dp"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_activities_person"
                            android:layout_margin="@dimen/_5sdp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvJoinPersonCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5+ persons"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:fontFamily="@font/axiforma_medium"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        app:cardBackgroundColor="#FFF2F7"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="0dp"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_calendar"
                            android:layout_margin="@dimen/_5sdp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvActivityStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunday, 3:30pm - 4:30pm"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:fontFamily="@font/axiforma_medium"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        app:cardBackgroundColor="#EFFFFA"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="0dp"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_frame_location"
                            android:layout_margin="@dimen/_5sdp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhanmondhi, Dhaka, Bangladesh"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/axiforma_medium"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        app:cardBackgroundColor="#EFF8FF"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="0dp"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_activities_male"
                            android:layout_margin="@dimen/_5sdp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGenderActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:fontFamily="@font/axiforma_medium"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/clInformationActivity"
            app:layout_constraintBottom_toTopOf="@+id/tvAskTOJoin"
            app:layout_constraintStart_toStartOf="@+id/clInformationActivity"
            app:layout_constraintEnd_toEndOf="@+id/clInformationActivity">
            <fragment
                android:id="@+id/mapViewActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"/>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAskTOJoin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            app:layout_constraintTop_toBottomOf="@id/cvLocation"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/ask_to_join"
            android:gravity="center"
            android:fontFamily="@font/axiforma_semi_bold"
            android:textColor="@color/white"
            android:background="@drawable/curved_shape_btn_back_green"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>