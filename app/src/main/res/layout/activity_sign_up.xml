<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignUpActivity"
    android:background="@color/background_color"
    android:padding="@dimen/_15sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHead"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/axiforma_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvHead"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_register_person"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignFullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="@string/name_hint"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="#5C7666"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_calling"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignUpMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="050XXXXXXX"
                    android:inputType="phone"
                    android:textColor="@color/text_color"
                    android:textColorHint="#5C7666"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="#101E16"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/axiforma_medium"
                android:layout_gravity="center_horizontal"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/optional"
                android:textColor="#C0D0C6"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/axiforma_medium"
                android:layout_gravity="center_horizontal"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sms"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignUpEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="mail@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_color"
                    android:textColorHint="#5C7666"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignUpPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:layout_weight="8"
                    android:textColor="@color/text_color"
                    android:textColorHint="#5C7666"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
                <ImageView
                    android:id="@+id/ivSVHide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/pass_hide"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <ImageView
                    android:id="@+id/ivSPView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_5sdp"
                   />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignUpConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:layout_weight="8"
                    android:textColor="@color/text_color"
                    android:textColorHint="#5C7666"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
                <ImageView
                    android:id="@+id/ivConVHide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/pass_hide"
                    android:padding="@dimen/_3sdp"

                    app:layout_constraintTop_toTopOf="@id/ccPassword"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="@id/ccPassword"
                    app:layout_constraintEnd_toEndOf="@id/ccPassword"/>
                <ImageView
                    android:id="@+id/ivConPView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_18sdp"
            >
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_have_accepted"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/axiforma_light"
                android:layout_gravity="center_vertical"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_amp_conditions"
                android:textColor="#3A3A3A"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/axiforma_semi_bold"
                android:layout_gravity="center_vertical"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignUpNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/sign_up"
            android:gravity="center"
            android:fontFamily="@font/axiforma_semi_bold"
            android:textColor="@color/white"
            android:background="@drawable/curved_shape_btn_back_green"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>