<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeadOfAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accounts"
        android:textColor="@color/black"
        android:fontFamily="@font/axiforma_bold"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civProfilePic"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_person"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadOfAccounts"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/axiforma_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/civProfilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_5sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAccountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPersonName"
        android:text=""
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/axiforma_regular"/>
    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountEmail"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_25sdp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/vLine"
        android:layout_marginStart="@dimen/_30sdp">
       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/llProfile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="10"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginTop="@dimen/_25sdp">
           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:src="@drawable/ic_profile"/>
           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="@string/profile"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_weight="8"
               android:textColor="@color/black"
               android:fontFamily="@font/axiforma_semi_bold"
               />
           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:padding="@dimen/_5sdp"
               android:src="@drawable/ic_next"
               android:background="@drawable/curved_shape_small_black"/>
       </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_people"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/friends"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next"
                android:background="@drawable/curved_shape_small_black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_language"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_18sdp"

                android:background="@drawable/curved_shape"
                android:weightSum="2"
              >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="EN"
                    android:fontFamily="@font/axiforma_bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/_7ssp"
                    android:textColor="@color/white"
                    android:background="@drawable/curved_shape_green"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="AR"
                    android:textSize="@dimen/_7ssp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/axiforma_bold"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llPasswordChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_password_change"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/password_change"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next"
                android:background="@drawable/curved_shape_small_black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/vLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F3F3"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountEmail"
            android:layout_marginTop="@dimen/_25sdp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llReportOnIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_25sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_report"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/report_an_issue"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next"
                android:background="@drawable/curved_shape_small_black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_privecy_policy"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next"
                android:background="@drawable/curved_shape_small_black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llTearmsAndCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_18sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_terms"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/terms_amp_conditions"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma_semi_bold"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next"
                android:background="@drawable/curved_shape_small_black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>