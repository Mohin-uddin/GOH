<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.forgotpassword.ForgotPasswordActivity"
    android:background="#F9F9F9"
    android:padding="@dimen/_15sdp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_head_color"
        android:textSize="@dimen/_15ssp"
        android:textAlignment="center"
        android:fontFamily="@font/axiforma_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/ivBack"
        android:layout_marginTop="@dimen/_35sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSendNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/enter_your_new_password_amp_confirm_it"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/axiforma_medium"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvSendNumberTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etForgetPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:layout_weight="8"
                    android:textColor="@color/colorPrimary"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
                <ImageView
                    android:id="@+id/ivFVHide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/pass_hide"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <ImageView
                    android:id="@+id/ivFPView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textColor="#101E16"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/axiforma_medium"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_7sdp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etForgetConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:layout_weight="8"
                    android:textColor="@color/colorPrimary"
                    android:paddingStart="@dimen/_7sdp"
                    android:fontFamily="@font/axiforma_medium"
                    android:textSize="@dimen/_10ssp"
                    />
                <ImageView
                    android:id="@+id/ivFConVHide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/pass_hide"
                    android:padding="@dimen/_3sdp"

                    app:layout_constraintTop_toTopOf="@id/ccPassword"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="@id/ccPassword"
                    app:layout_constraintEnd_toEndOf="@id/ccPassword"/>
                <ImageView
                    android:id="@+id/ivFConPView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/confirm"
        android:gravity="center"
        android:fontFamily="@font/axiforma_semi_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/llPassword"
        android:background="@drawable/curved_shape_btn_back_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>