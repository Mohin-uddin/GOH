<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    android:background="#F9F9F9"
    tools:context=".ui.createActivity.CreateActivityReview">

    <ImageView
        android:id="@+id/ivReviewBack"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCreateActivityReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_activity"
        android:fontFamily="@font/axiforma_semi_bold"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/axiforma_medium"
        android:layout_marginTop="@dimen/_10sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCreateActivityReview"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/curved_shape_activities_details_white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:cardCornerRadius="@dimen/_8sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBannerActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/activities_details"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActivitiesName"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:text="Live music concert in Dhaka 2022"
            app:fontFamily="@font/axiforma_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llSponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/llSponsorMarker"
            app:layout_constraintTop_toBottomOf="@+id/tvActivitiesName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/llSponsorMarker">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host by - "
                app:fontFamily="@font/axiforma_regular"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSponsorPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sajol_ahmed"
                app:fontFamily="@font/axiforma_regular"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tvAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line_border"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/llSponsorMarker"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">
          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvPraivecy"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Friends"
              app:fontFamily="@font/axiforma_semi_bold"
              android:textColor="@color/grey"
              android:textSize="@dimen/_10ssp"
              />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_friends_grey"
                android:layout_marginStart="@dimen/_5sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAboutDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAbout"
            app:fontFamily="@font/axiforma_regular"
            android:text="@string/about"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="#253E2F"/>
        <View
            android:id="@+id/vAboutBottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutDetails"
            android:background="#F2F2F2"
            android:layout_marginTop="@dimen/_15sdp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vAboutBottomLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardBackgroundColor="#FFF6E9"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_activities_person"
                        android:layout_margin="@dimen/_5sdp"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPersonAttend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5+ persons"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:fontFamily="@font/axiforma_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardBackgroundColor="#FFF2F7"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calendar"
                        android:layout_margin="@dimen/_5sdp"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvActivityDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunday, 3:30pm - 4:30pm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:fontFamily="@font/axiforma_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardBackgroundColor="#EFFFFA"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_frame_location"
                        android:layout_margin="@dimen/_5sdp"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvActivityLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dhanmondhi, Dhaka, Bangladesh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:fontFamily="@font/axiforma_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardBackgroundColor="#EFF8FF"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_activities_male"
                        android:layout_margin="@dimen/_5sdp"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvActivityGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:fontFamily="@font/axiforma_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/tvView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/example"
        app:layout_constraintBottom_toBottomOf="@id/example"
        app:layout_constraintEnd_toEndOf="@id/example"
        app:layout_constraintStart_toStartOf="@id/example"
        android:background="@drawable/background_gradient"/>
    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:text="Slide to GOH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:inner_color="#48F48D"
        app:outer_color="#0041B06B"
        android:padding="0dp"
        app:area_margin="@dimen/_4sdp"
        app:slider_icon_color="@color/white"
        app:text_color="@color/white"
        app:bump_vibration="10"
        app:complete_icon="@drawable/check_icon"
        app:slider_height="@dimen/_45sdp"
        app:slider_icon="@drawable/ic_stroke"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/bottom"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>