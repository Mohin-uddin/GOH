<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCongress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cong"
        />
    <View
        android:id="@+id/vCross"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/close"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_27sdp"
        app:layout_constraintTop_toTopOf="@id/ivCongress"
        app:layout_constraintEnd_toEndOf="@id/ivCongress"
        />
    <View
        android:id="@+id/vPromotion"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCongress"
        app:layout_constraintStart_toStartOf="@id/ivCongress"
        app:layout_constraintEnd_toEndOf="@id/ivCongress"/>
</androidx.constraintlayout.widget.ConstraintLayout
 >