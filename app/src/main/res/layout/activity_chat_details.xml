<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chatDetails.ChatDetailsActivity"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChatBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_arrow_left"
        android:padding="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clChatPersonDetails"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/civChatPerson"
           android:layout_width="@dimen/_25sdp"
           android:layout_height="@dimen/_25sdp"
           android:src="@drawable/chat_person"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"

           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="William john"
           android:textColor="@color/black"
           android:fontFamily="@font/axiforma_semi_bold"
           app:layout_constraintStart_toEndOf="@+id/civChatPerson"
           android:layout_marginStart="@dimen/_5sdp"
           app:layout_constraintTop_toTopOf="parent"
           android:textSize="@dimen/_10ssp"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Online"
           app:layout_constraintStart_toStartOf="@+id/tvName"
           app:layout_constraintTop_toBottomOf="@+id/tvName"
           android:textColor="#68DBBA"
           android:textSize="@dimen/_9ssp"
           android:fontFamily="@font/axiforma_regular"/>
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvNotifcatiNumber"
           android:layout_width="@dimen/_7sdp"
           android:layout_height="@dimen/_7sdp"
           app:layout_constraintTop_toTopOf="@+id/civChatPerson"
           android:text=""
           android:textColor="@color/white"
           android:textSize="@dimen/_5sdp"
           android:textAlignment="center"
           android:gravity="center"
           android:background="@drawable/circle_online"
           app:layout_constraintEnd_toEndOf="@+id/civChatPerson"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDotC"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_doted"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clChatPersonDetails"
        app:layout_constraintBottom_toBottomOf="@+id/clChatPersonDetails"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/clChatPersonDetails"
        app:layout_constraintBottom_toTopOf="@id/llSmsSend"
        android:layout_marginBottom="@dimen/_15sdp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llSmsSend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/curved_send_sms_shape_grey">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSendSms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:hint="Write your message"
            android:paddingStart="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivSend"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_send"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/curved_send_sms_shape_green"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>